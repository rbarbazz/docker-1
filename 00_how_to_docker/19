mkdir $HOME/Abathur
docker run --name Abathur -dt --mount type=bind,source=$HOME/Abathur,target=/root -p 3000:3000 python:2-slim
docker exec Abathur pip install Flask
touch $HOME/Abathur/app.py
echo 'from flask import Flask' > $HOME/Abathur/app.py
echo 'app = Flask(__name__)' >> $HOME/Abathur/app.py
echo "@app.route('/')" >> $HOME/Abathur/app.py
echo 'def hello_world():' >> $HOME/Abathur/app.py
echo "    return '<h1>Hello, World!</h1>'" >> $HOME/Abathur/app.py
docker exec -e FLASK_APP=/root/app.py Abathur flask run --host=0.0.0.0 --port=3000